# Anthropic API Keys for Multi-Agent System
# Each agent persona uses a separate API key for isolation and tracking

# Product Manager Agent
ANTHROPIC_API_KEY_PM=your_pm_api_key_here


# Architect Agent
ANTHROPIC_API_KEY_ARCH=your_architect_api_key_here

# Engineer Agent
ANTHROPIC_API_KEY_ENG=your_engineer_api_key_here

# QA Agent
ANTHROPIC_API_KEY_QA=your_qa_api_key_here

# Default API Key (fallback)
ANTHROPIC_API_KEY=your_default_api_key_here

# Optional: Claude CLI binary path (set if not on PATH)
CLAUDE_BINARY=path_to_claude_binary_here

# LangGraph Configuration
LANGCHAIN_TRACING_V2=true
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_API_KEY=your_langsmith_api_key_here
LANGCHAIN_PROJECT=autonomous-software-studio

# Application Settings
LOG_LEVEL=INFO
DEBUG_MODE=false
MAX_RETRIES=3
TIMEOUT_SECONDS=300

# MCP Server Configuration
MCP_SERVER_HOST=localhost
MCP_SERVER_PORT=8080
