# =============================================================================
# Autonomous Software Studio - Environment Configuration
# Copy this file to .env and fill in your values
# =============================================================================

# =============================================================================
# Anthropic API Keys for Multi-Agent System
# Each agent persona can use a separate API key for isolation and tracking
# You can use the same key for all agents, or different keys for each
# =============================================================================

# Product Manager Agent
ANTHROPIC_API_KEY_PM=your_pm_api_key_here

# Architect Agent
ANTHROPIC_API_KEY_ARCH=your_architect_api_key_here

# Engineer Agent
ANTHROPIC_API_KEY_ENG=your_engineer_api_key_here

# QA Agent
ANTHROPIC_API_KEY_QA=your_qa_api_key_here

# Default/Fallback API Key (used if specific agent key is not set)
ANTHROPIC_API_KEY=your_default_api_key_here

# =============================================================================
# Database Configuration - PostgreSQL
# =============================================================================

# PostgreSQL connection settings
POSTGRES_USER=softwarestudio
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=softwarestudio
POSTGRES_PORT=5432

# Full database URL (constructed from above, or set directly)
# DATABASE_URL=postgresql://softwarestudio:your_secure_password_here@postgres:5432/softwarestudio

# =============================================================================
# Redis Cache Configuration
# =============================================================================

REDIS_PORT=6379
# REDIS_URL=redis://redis:6379/0

# =============================================================================
# Application Settings
# =============================================================================

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Enable debug mode (true/false)
DEBUG_MODE=false

# Maximum concurrent sessions
MAX_SESSIONS=100

# Session timeout in seconds (default: 1 hour)
SESSION_TIMEOUT=3600

# Maximum QA-Engineer repair iterations
MAX_ITERATIONS=5

# Session time-to-live in days
SESSION_TTL_DAYS=7

# =============================================================================
# Service Ports
# =============================================================================

# Orchestrator API port
ORCHESTRATOR_PORT=8000

# Streamlit Dashboard port
DASHBOARD_PORT=8501

# Prometheus metrics port (optional monitoring)
PROMETHEUS_PORT=9090

# Grafana dashboard port (optional monitoring)
GRAFANA_PORT=3000

# =============================================================================
# Claude CLI Configuration (Optional)
# =============================================================================

# Path to Claude CLI binary (if not on PATH)
# CLAUDE_BINARY=/path/to/claude

# =============================================================================
# LangGraph/LangChain Observability (Optional)
# =============================================================================

# Enable LangSmith tracing
LANGCHAIN_TRACING_V2=false
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_API_KEY=your_langsmith_api_key_here
LANGCHAIN_PROJECT=autonomous-software-studio

# =============================================================================
# MCP Server Configuration (Optional)
# =============================================================================

MCP_SERVER_HOST=localhost
MCP_SERVER_PORT=8080

# =============================================================================
# Monitoring Credentials (Optional - for Grafana)
# =============================================================================

GRAFANA_USER=admin
GRAFANA_PASSWORD=your_grafana_password_here

# =============================================================================
# Security Settings
# =============================================================================

# Secret key for session management (generate a random string)
SECRET_KEY=your_secret_key_here_generate_a_random_string

# Enable CORS (set to true if dashboard is on different domain)
ENABLE_CORS=false
